{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/teacher",
        "destination": "/teacher-dashboard.html"
      },
      {
        "source": "/admin",
        "destination": "/admin-dashboard.html"
      },
      {
        "source": "/quiz",
        "destination": "/quiz.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
